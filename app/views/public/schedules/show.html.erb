schedules#show
<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <%= @schedule.name %>
          </div>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Period</th>
                <th>月</th>
                <th>火</th>
                <th>水</th>
                <th>木</th>
                <th>金</th>
                <th>土</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><span class="font-weight-bold">1st</span></td>
                <td>
                  <% if @schedule.lessons.exists?(day_of_week: 1, period: 1) %>
                    <% lesson = @schedule.lessons.find_by(day_of_week: 1, period: 1) %>
                    <% subject = Subject.find(lesson.subject_id) %>
                    <div style="color: <%= subject.color %>;"><%= subject.name %></div>
                  <% end %>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <tr>
                <td><span class="font-weight-bold">2nd</span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <tr>
                <td><span class="font-weight-bold">3rd</span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <tr>
                <td><span class="font-weight-bold">4th</span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <tr>
                <td><span class="font-weight-bold">5th</span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              <tr>
                <td><span class="font-weight-bold">6th</span></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "編集", edit_schedule_path(@schedule) %>
        </div>
      </div>
    </div>
  </div>
</div>