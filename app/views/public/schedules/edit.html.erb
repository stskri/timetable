<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body p-3">
          <%= form_with model: @schedule, class: "pb-3 d-flex" do |f| %>
            <%= f.text_field :name, placeholder: "時間割名", class: "form-control mr-3" %>
            <%= f.text_field :explanation, placeholder: "説明", class: "form-control mr-3" %>
            <%= f.submit "確定", class: "btn btn-success" %>
          <% end %>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Period</th>
                <th>月</th>
                <th>火</th>
                <th>水</th>
                <th>木</th>
                <th>金</th>
                <th>土</th>
              </tr>
            </thead>
            <tbody>
              <% rows = ["1st", "2nd", "3rd", "4th", "5th", "6th"] %>
              <% period = 0 %>
              <% rows.each do |row| %>
                <% period +=  1 %>
                <tr>
                  <td><%= row %></td>
                  <% (1..6).each do |day_of_week| %>
                    <td>
                      <% lessons = @schedule.lessons.includes(:subject).where(day_of_week: day_of_week, period: period) %>
                      <% if lessons.exists? %>
                        <% lessons.each do |lesson| %>
                          <%= link_to edit_schedule_lesson_path(@schedule.id, lesson), style: "color: #{lesson.subject.color};" do %>
                            <%= lesson.subject.name %>
                          <% end %>
                        <% end %>
                      <% else %>
                        <%= link_to new_schedule_lesson_path(@schedule, day_of_week: day_of_week, period: period) do %>
                          <i class="fa-regular fa-square-plus"></i>
                        <% end %>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "確定", schedule_path(@schedule) %>
        </div>
      </div>
    </div>
  </div>
</div>