schedules#edit
<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <%= @schedule.name %>
          </div>

          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Period</th>
                <th>月</th>
                <th>火</th>
                <th>水</th>
                <th>木</th>
                <th>金</th>
                <th>土</th>
              </tr>
            </thead>
            <tbody>
              <% periods = ["1st", "2nd", "3rd", "4th", "5th", "6th"] %>
              <% periods.each do |period| %>
                <tr>
                  <td><%= period %></td>
                  <% cols = Array.new(6) %>
                  <% cols.each do %>
                    <% day_of_week = 1 %>
                    <td>
                      <%= link_to new_schedule_lesson_path(@schedule, day_of_week: day_of_week, period: 1) do %>
                      <i class="fa-regular fa-square-plus"></i>
                    <% end %>
                    </td>
                    <% day_of_week += 1 %>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "確定", schedule_path(@schedule) %>
        </div>
      </div>
    </div>
  </div>
</div>